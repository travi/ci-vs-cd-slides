{
  "name": "ci-vs-cd-slides",
  "description": "Spectacle slide deck for talk about the conflict between CI and CD",
  "license": "MIT",
  "private": true,
  "repository": "travi/ci-vs-cd-slides",
  "bugs": "https://github.com/travi/ci-vs-cd-slides/issues",
  "homepaga": "https://github.com/travi/ci-vs-cd-slides#readme",
  "author": "Matt Travi <npm@travi.org> (https://matt.travi.org/)",
  "scripts": {
    "clean": "rimraf lib/",
    "prebuild": "run-s clean",
    "build": "webpack --env production",
    "build:dev": "webpack --env development",
    "lint:md": "remark . --frail",
    "lint:js": "eslint . --cache",
    "lint:sensitive": "ban",
    "lint:peer": "npm ls --production >/dev/null",
    "test": "npm-run-all --print-label --parallel lint:* --parallel test:*",
    "test:integration": "cucumber-js test/integration --require-module @babel/register --format-options '{\"snippetInterface\": \"async-await\"}'",
    "test:smoke": "start-server-and-test 'npm start' http://localhost:3000 cypress:run",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "prestart": "run-s build",
    "start": "serve lib/",
    "dev": "webpack-dev-server",
    "predeploy:netlify": "run-s build generate:thumbnail",
    "deploy:netlify": "netlify deploy --dir=./lib/ --prod",
    "generate:thumbnail": "start-server-and-test 'serve lib/' http://localhost:3000 'npx capture-website-cli http://localhost:3000 --output=lib/thumbnail.png'",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.25.9",
    "@babel/register": "7.25.9",
    "@travi/babel-preset": "3.0.136",
    "@travi/eslint-config": "5.0.11",
    "@travi/eslint-config-cypress": "1.0.62",
    "@travi/eslint-config-react": "1.0.152",
    "babel-loader": "8.4.1",
    "babel-plugin-transform-react-remove-prop-types": "0.4.24",
    "ban-sensitive-files": "1.10.7",
    "chai": "5.1.2",
    "commitlint-config-travi": "1.4.54",
    "@cucumber/cucumber": "9.6.0",
    "cypress": "9.7.0",
    "cz-conventional-changelog": "3.3.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "4.5.2",
    "husky": "9.1.7",
    "img-loader": "4.0.0",
    "mustache-loader": "1.4.3",
    "netlify-cli": "8.1.4",
    "npm-run-all2": "7.0.2",
    "raw-loader": "4.0.2",
    "remark-cli": "11.0.0",
    "remark-preset-lint-travi": "6.0.1",
    "serve": "14.2.4",
    "start-server-and-test": "2.0.10",
    "style-loader": "2.0.0",
    "url-loader": "4.1.1",
    "webpack": "4.47.0",
    "webpack-cli": "3.3.12",
    "webpack-config-utils": "2.3.1",
    "webpack-dev-server": "4.15.2"
  },
  "dependencies": {
    "normalize.css": "8.0.1",
    "prop-types": "15.8.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-hot-loader": "4.13.1",
    "redbox-react": "1.6.0",
    "spectacle": "5.8.0"
  }
}
